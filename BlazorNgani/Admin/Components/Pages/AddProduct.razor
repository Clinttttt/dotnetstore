@page "/AddProducts"
@layout AdminLayout
@inject NavigationManager navigation

<h5 class="	base-content ml-2 mt-2 text-3xl font-semibold ">Product Information</h5>
<div class="mt-4" style="border-bottom:solid  1px rgba(0,0,0,0.2); width:59.9rem;"></div>


<div class="flex-row flex ">
    <fieldset class="fieldset bg-base-200 border-neutral ml-6 mt-2   srounded-box w-xs  border p-4" style="border:solid 1px rgba(0,0,0,0.2)">
        <legend class="fieldset-legend ">Add Book</legend>

        <label class="label text-neutral">Book Title</label>
        <input type="text" class="border-neutral input text-neutral" placeholder="My awesome page" style="border:solid 1px rgba(0,0,0,0.2)" />

        <label class="label text-neutral">Authors</label>
        <input type="text" class=" border-neutral input text-neutral" placeholder="my-awesome-page" style="border:solid 1px rgba(0,0,0,0.2)" />

        <label class="label text-neutral">Description</label>
        <textarea class="border-neutral textarea h-24 text-neutral" placeholder="Bio" style="border:solid 1px rgba(0,0,0,0.2)"></textarea>
     
        <label class="label text-neutral">Price</label>
        <input type="number" class=" border-neutral input text-neutral" placeholder="my-awesome-page" style="border:solid 1px rgba(0,0,0,0.2)" />
      
        <label class="label text-neutral">Languages</label>
        <select class="select " style="border:solid 1px rgba(0,0,0,0.2)">
            <option value="">-- Select Language --</option>
            <option value="English">English</option>
            <option value="Filipino">Filipino</option>
            <option value="Japanese">Japanese</option>
            <option value="Korean">Korean</option>
            <option value="Chinese">Chinese</option>
            <option value="Spanish">Spanish</option>
            <option value="French">French</option>
            <option value="German">German</option>
            <option value="Italian">Italian</option>
            <option value="Russian">Russian</option>
            <option value="Portuguese">Portuguese</option>
            <option value="Arabic">Arabic</option>
            <option value="Hindi">Hindi</option>
            <option value="Bengali">Bengali</option>
            <option value="Urdu">Urdu</option>
            <option value="Vietnamese">Vietnamese</option>
            <option value="Thai">Thai</option>
        </select>
    </fieldset>



    <fieldset class="fieldset bg-base-200 border-base-300 ml-6 mt-2   srounded-box w-xs  border p-4">
        <legend class="fieldset-legend ">Add Cover</legend>
        <input type="file" class="file-input file-input-neutral" />

        <label class="label text-neutral">Category</label>
        <div class="filter justify-center flex flex-row  gap-1">
            <input class="btn filter-reset 	base-content" type="radio" name="metaframeworks" aria-label="All" />
            <input class="btn w-14 	base-content" type="radio" name="metaframeworks" aria-label="Romance" />
            <input class="btn 	base-content" type="radio" name="metaframeworks" aria-label="Fantasy" />
            <input class="btn 	base-content" type="radio" name="metaframeworks" aria-label="Manga" />
            <input class="btn   base-content" type="radio" name="metaframeworks" aria-label="Manhwa" />
            <input class="btn 	base-content" type="radio" name="metaframeworks" aria-label="Suspenses" />
        </div>

        <label class="label">Genre</label>
        <select class="select"style="border:solid 1px rgba(0,0,0,0.2)">
            <option disabled selected>Pick a color</option>
            <option>Crimson</option>
            <option>Amber</option>
            <option>Velvet</option>
        </select>

        <label class="label">Description</label>
        <textarea class="textarea h-24" placeholder="Bio"></textarea>
    </fieldset>
</div>










